nav.h-head.box
    .m-hdimg
        a(class="hdimg img" href="/")
            img(src="/img/profile.jpg" width="128" height="128")
        h1.ttl
            a(href="/")= config.title

    if theme.description
        p.m-desc!= theme.description

    .m-nav
        ul
            include common.pug
            - for (var i in theme.menu)
              +menu-item(theme.menu[i].directory, __(theme.menu[i].page))

            li.m-sch
                form(id="j-formsch" class="form" action="/search", method="get")
                    input(type="text" name="q" class="txt" value="搜索" onfocus="if(this.value=='搜索'){this.value='';}" onblur="if(this.value==''){this.value='搜索';}")
